<article>
  <h1><%= @job.title %></h1>
  <% if @job.featured? %>
    <strong>Destaque</strong>
  <% end %>
  <dl>
    <dt>Categoria:</dd>
    <dd><%= @job.category.name %></dd>
    <dt>Empresa:</dd>
    <dd><%= @job.company.name %></dd>
    <dt>Descrição:</dd>
    <dd><%= @job.description %></dd>
    <dt>Local:</dd>
    <dd><%= @job.location %></dd>
  </dl>
</article>
<%= link_to 'Voltar', root_path %>

